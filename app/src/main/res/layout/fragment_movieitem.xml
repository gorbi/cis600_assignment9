<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_icon"
            android:layout_width="202px"
            android:layout_height="300px" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/movie_icon"
            android:text="TextView"
            android:textSize="13.5sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/movie_icon"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_toEndOf="@+id/movie_icon"
            android:text="TextView"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/year"
            android:layout_toEndOf="@+id/movie_icon"
            android:isIndicator="true"
            android:numStars="5"
            android:progressBackgroundTint="@color/colorYellow"
            android:progressTint="@color/colorYellow"
            android:secondaryProgressTint="@color/colorYellow"
            android:stepSize="0.01" />

        <ImageView
            android:id="@+id/menu_moreoverflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_menu_moreoverflow_normal_holo_light" />

    </RelativeLayout>

</android.support.v7.widget.CardView>